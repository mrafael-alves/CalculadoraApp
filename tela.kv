<GrayButton@Button>:
    size_hint: (.2, .2)
    font_size: 32
    background_color: (157/255, 157/255, 157/255, 1)

<OtherButton@Button>:
    size_hint: (.2, .2)
    font_size: 32


<Calculadora>:
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		TextInput:
		    id: calc_input
		    text: '0'
		    halign: 'right'
		    font_size: 60
		    size_hint: (1, .2)

		GridLayout:
		    cols: 4
		    rows: 5

		    # row 1
		    OtherButton:
		        text: '%'

		    OtherButton:
		        text: 'C'
		        on_press: root.clear()
		    OtherButton:
		        text: '<-'
		        on_press: root.backspace()
		    OtherButton:
		        text: '/'
		        on_press: root.operation(self.text)

		    # row 2
		    GrayButton:
		        text: '7'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '8'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '9'
		        on_press: root.btPress(self.text)
		    OtherButton:
		        text: 'x'
		        on_press: root.operation('*')

		    # row 3
		    GrayButton:
		        text: '4'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '5'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '6'
		        on_press: root.btPress(self.text)
		    OtherButton:
		        text: '-'
		        on_press: root.operation(self.text)

		    # row 4
		    GrayButton:
		        text: '1'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '2'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '3'
		        on_press: root.btPress(self.text)
		    OtherButton:
		        text: '+'
		        on_press: root.operation(self.text)

		    # row 5
		    GrayButton:
		        text: '+/-'
		    GrayButton:
		        text: '0'
		        on_press: root.btPress(self.text)
		    GrayButton:
		        text: '.'
		        on_press: root.decimal()
		    OtherButton:
		        text: '='
		        background_color: (1, 140/255, 0, 1)
